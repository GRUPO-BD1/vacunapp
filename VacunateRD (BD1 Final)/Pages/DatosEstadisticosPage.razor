@page "/DatosEstadisticos"

<h2><u>Datos estadísticos</u></h2>
<br />
@if (stast != null)
{
    <div>
        <h3>Vacunas disponibles en central: @stast.VacunasDisponiblesCentral</h3>
    </div>
    <br />
    <div>
        <h3>Vacunados por región</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Región</th>
                    <th>Cantidad</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in stast.VacunadosPorRegion)
                {
                    <tr>
                        <td>@item.NombreArea</td>
                        <td>@item.CantidadArea</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <br />
    <div>
        <h3>Vacunados por provincia</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Provincia</th>
                    <th>Cantidad</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in stast.VacunadosPorProvincia)
                {
                    <tr>
                        <td>@item.NombreArea</td>
                        <td>@item.CantidadArea</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <br />
    <div>
        <h3>Vacunados por municipio</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Municipio</th>
                    <th>Cantidad</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in stast.VacunadosPorMunicipio)
                {
                    <tr>
                        <td>@item.NombreArea</td>
                        <td>@item.CantidadArea</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <br />
    <div>
        <h3>Vacunas disponibles por región</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Región</th>
                    <th>Cantidad</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in stast.VacunasDisponiblesPorRegion)
                {
                    <tr>
                        <td>@item.Region</td>
                        <td>@item.Cantidad</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p><em>Cargando...</em></p>
}

@code {
    private DatosEstadisticos stast;
    protected override void OnInitialized()
    {
        DBServices db = new DBServices();
        stast = db.GetDatosEstadisticos();
    }
}
